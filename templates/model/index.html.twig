{% extends 'base.html.twig' %}

{% block title %}Model index{% endblock %}

{% block body %}
    <h1>Model index</h1>

    <table id="table_id" class="table table-striped table-bordered" width="100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Num_model</th>
                <th>Color</th>
                <th>Quantity</th>
                <th>Create_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.numModel }}</td>
                <td>{{ model.color }}</td>
                <td>{{ model.quantity }}</td>
                <td>{{ model.createDate ? model.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('model_show', {'id': model.id}) }}">show</a>
                    <a href="{{ path('model_edit', {'id': model.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('model_new') }}">Create new</a>
{% endblock %}
